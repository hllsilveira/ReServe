@model IEnumerable<TesteReServe.Models.CovidPais>

    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="text-center">
        <h1 class="display-4">Listagem de Paises com maiores casos de Covid-19</h1>


        @{
            if (Model.Count() <= 0)
            {
                <div class="alert alert-warning" role="alert">
                    <h4>Não foi possível localizar as informações !</h4>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width: 10%">Ranking</th>
                            <th style="width: 20%">Nome do País</th>
                            <th style="width: 70%">Casos Ativos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            int index = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 10%" class="align-middle">
                                        @index
                                    </td>
                                    <td style="width: 20%">
                                        @item.Country
                                    </td>
                                    <td style="width: 70%">
                                        @(item.TotalConfirmed - item.TotalRecovered)
                                    </td>
                                </tr>
                            }
                         }
                    </tbody>
                </table>

            }
        }


    </div>
